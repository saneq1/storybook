{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "esModuleInterop": true,
    "rootDirs": ["src", "stories"],
    "moduleResolution": "node",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "incremental": true,
    "lib": [
      "ESNext",
      "DOM.Iterable",
      "DOM"
    ]

  }

}
